<aura:component controller="OpportunityController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global">
    <aura:attribute name="opportunities" type="List"/>
    <aura:attribute name="columns" type="List"/>
    <aura:attribute name="showNotContactedOnly" type="Boolean" default="false" />   
    <aura:attribute name="recordId" type="Id"/>
    
    <aura:handler name="init" value="{! this }" action="{! c.doInit }"/>
    
    <lightning:card title="Oportunidades em 'Negotiation/Review'">
        <lightning:datatable data="{! v.opportunities }"
                             columns="{! v.columns }"
                             keyField="Id"
                             hideCheckboxColumn="true"                                     				
                             selectedRows="{! v.selectedRows }"
                             />
        <lightning:input type="checkbox"
                 label="Mostrar oportunidades nÃ£o contatadas"
                 checked="{!v.showNotContactedOnly}"
                 value="{! v.showNotContactedOnly }"
                 onchange="{!c.handleShowNotContactedOnlyChange}" />
      
    </lightning:card>

</aura:component>